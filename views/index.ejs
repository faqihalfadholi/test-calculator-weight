<!DOCTYPE html>  
<html lang="en">  
<head>  
  <meta charset="UTF-8" />  
  <title>Kalkulator Berat Badan Ideal</title>  
  <link rel="stylesheet" href="/style.css">
</head>  
<body> 
<div class="container">
  <h2>Kalkulator Berat Badan Ideal</h2>  
  <form action="/hitung" method="post">  
    <div>  
      <label>Nama: <input type="text" name="nama" required /></label>  
    </div>  
    <div>  
      <label>Jenis Kelamin:  
        <select name="jenis_kelamin" required>  
          <option value="">--Pilih--</option>  
          <option value="Laki-laki">Laki-laki</option>  
          <option value="Perempuan">Perempuan</option>  
        </select>  
      </label>  
    </div>  
    <div>  
      <label>Tinggi (cm): <input type="number" name="tinggi" required min="50" max="300" /></label>  
    </div>  
    <div>  
      <label>Berat Badan (kg): <input type="number" name="berat" required min="10" max="300" /></label>  
    </div>  
    <button type="submit" class="btn-submit">Hitung Berat Ideal</button>  
  </form>  

  <% if(records.length > 0){ %>  
  <h3>Riwayat Kalkulasi</h3>  
  <div class="history-controls">
    <form action="/clear-history" method="post" onsubmit="return confirm('Apakah Anda yakin ingin menghapus semua riwayat?');">
      <button type="submit" class="clear-btn">Hapus Semua Riwayat</button>
    </form>
  </div>
  <table>  
    <thead>  
      <tr>  
        <th>Nama</th>  
        <th>Jenis Kelamin</th>  
        <th>Tinggi (cm)</th>  
        <th>Berat (kg)</th>  
        <th>Berat Ideal (kg)</th>  
        <th>Tanggal</th>  
      </tr>  
    </thead>  
    <tbody>  
      <% records.forEach(function(rec){ %>  
        <tr>  
          <td><%= rec.nama %></td>  
          <td><%= rec.jenis_kelamin %></td>  
          <td><%= rec.tinggi %></td>  
          <td><%= rec.berat %></td>  
          <td><%= rec.berat_ideal %></td>  
          <td><%= rec.tanggal.toLocaleString() %></td>  
        </tr>  
      <% }) %>  
    </tbody>  
  </table>  
  <% } %>  
</div>
</body>  
</html>